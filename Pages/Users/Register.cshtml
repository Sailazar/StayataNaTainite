@page
@model StayataNaTainite.Pages.Users.RegisterModel

<style>
/* Add your CSS styles here */

/* Example styles for the form */
form {
  max-width: 400px;
  margin: 0 auto;
  margin-top: 50px;
  padding: 20px;
  border: 1px solid #ccc;
  border-radius: 5px;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.3);
}

label {
  display: block;
  margin-bottom: 5px;
}

input[type="email"],
input[type="password"],
input[type="text"] {
  width: 100%;
  padding: 8px;
  margin-bottom: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  box-sizing: border-box;
}

input[type="submit"] {
  background-color: hsl(0, 0%, 64%);
  color: #fff;
  border: none;
  border-radius: 5px;
  padding: 10px 20px;
  cursor: pointer;
}

input[type="submit"]:hover {
  background-color:#6e6e6e;
}
</style>

<form method="post">
    <div>
        <label asp-for="User.Email">Email</label>
        <input type="email" asp-for="User.Email" required />
    </div>

    <div>
        <label asp-for="User.PasswordHash">Password</label>
        <input type="password" asp-for="User.PasswordHash" required />
    </div>

    <div>
        <label asp-for="User.Username">Username</label>
        <input asp-for="User.Username" required />
    </div>

    <div>
        <input type="submit" value="Submit" />
    </div>
</form>
