@page
@model StayataNaTainite.Pages.ListUsersModel
<link rel="stylesheet" href="<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Raleway:wght@300&family=Roboto+Mono:wght@100&family=Roboto+Slab:wght@100&display=swap" 
rel="stylesheet">"
@{
    ViewData["Title"] = "List users page";
}

<div class="text-center">
    <h1 class="display-4">Temp code - list all users</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>PasswordHash</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Username</td>
                    <td>@user.PasswordHash</td>
                    <td>@user.Email</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    h1.display-4 {
        margin: 0 auto;
        margin-top: 34px;
        margin-bottom: 34px;
        font-family: 'Raleway', sans-serif;
        font-size: 24px;
    }
</style>