@page
@model StayataNaTainite.Pages.Creations.UploadModel
@{
}

<form method="post">
    <div>
        <label asp-for="Creation.Title">Title</label>
        <input asp-for="Creation.Title" required />
    </div>

    <div>
        <input type="submit" value="Upload" />
    </div>
</form>

<style>
    form {
    margin: 0 auto;
    margin-top: 50px;
    max-width: 400px;
    background-color: white;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.3);
  }
  
  label {
    display: block;
    margin-bottom: 10px;
  }
  
  input[type="text"],
  input[type="email"],
  input[type="password"] {
    display: block;
    width: 100%;
    padding: 10px;
    border-radius: 3px;
    border: 1px solid #ccc;
    background-color:white;
    margin-bottom: 20px;
  }
  
  input[type="submit"] {
    background-color: hsl(0, 0%, 64%);
    color: white;
    border: none;
    padding: 10px;
    border-radius: 3px;
    cursor: pointer;
  }
  
  input[type="submit"]:hover {
    background-color: #6e6e6e;
  }
  
</style>